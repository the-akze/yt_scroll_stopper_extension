{
  "name": "YT Scroll Stopper",
  "description": "Stop scrolling on YouTube Shorts.",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
        "js": ["js/yt-shorts-inject.js"],
        "matches": [
            "https://www.youtube.com/",
            "https://youtube.com/",
            "https://www.youtube.com/*",
            "https://youtube.com/*"
        ]
    }
  ]
}